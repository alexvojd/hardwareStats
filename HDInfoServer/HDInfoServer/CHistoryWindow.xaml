<Window x:Class="HDInfoServer.CHistoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NikitaServer"
        mc:Ignorable="d"
        Title="История изменений" Height="400" Width="830">

    <Grid>

        <ListView Name="HistoryListView" Margin="10,30,10,10" Grid.RowSpan="2" Grid.ColumnSpan="2" SelectionChanged="ChangeSelected"/>
        <Button Content="Назад" HorizontalAlignment="Left" Margin="277,3,0,0" VerticalAlignment="Top" Width="79" Height="24" Click="BackBtn_Click"/>
        <Label Content="Comp"  Name="CompNameLabel"  Visibility="Visible" HorizontalAlignment="Left" Margin="387,2,0,0" VerticalAlignment="Top" Width="71"/>
        <Label Content="Room"  x:Name="CompRoomLabel"  Visibility="Visible" HorizontalAlignment="Left" Margin="458,2,0,0" VerticalAlignment="Top" Width="71"/>
        <Button Content="Подтвердить все изменения" HorizontalAlignment="Left" Margin="639,3,0,0" VerticalAlignment="Top" Width="173" Height="24" Click="AcceptAll_btn"/>
    </Grid>
</Window>
